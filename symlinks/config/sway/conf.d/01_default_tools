# Main tools mapping
set $term alacritty
set $menu 'rofi -run-shell-command "{terminal} -e /usr/bin/fish -c {cmd}" -show combi -modes combi -combi-modes "window,drun,run"'
set $filemanager nautilus
set $processviewer $term -e btop
set $browser librewolf

# start a terminal
bindsym $mod+Return exec $term

# start browser
bindsym $mod+b exec $browser

# toggle task
bindsym $mod+$alt+t exec source ~/.profile && t toggle && pkill --signal SIGRTMIN+1 waybar && t notify

# start menu (program launcher)
bindsym $mod+space exec $menu

# start file explorer
bindsym $mod+Shift+period exec $filemanager

# start process viewer
bindsym $mod+p exec $processviewer

# Open configration menu
bindsym $mod+Shift+comma exec ~/bin/settings-selector
