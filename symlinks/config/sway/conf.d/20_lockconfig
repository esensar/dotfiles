# Define locker script
bindsym $alt+L exec 'swaylock'

# IDLE CONFIG
exec swayidle -w \
         timeout 300 'swaylock' \
         timeout 330 'swaymsg "output * power off"' \
				 resume 'swaymsg "output * power on"' \
         timeout 600 'systemctl suspend' \
         before-sleep 'swaylock; playerctl pause'
